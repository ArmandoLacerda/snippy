{
  "name": "Snippy Functions Codespace",
  "dockerFile": "Dockerfile",

  // ── Features you already had ─────────────────────────────────────────────
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },

  // ── Forward the Functions host + Azurite blob/queue/table ports ─────────
  "forwardPorts": [7071, 10000, 10001, 10002],

  // ── Lifecycle commands ──────────────────────────────────────────────────
  // 1. Install Azurite globally via npm
  // 2. Run your existing setup script
  "postCreateCommand": "npm install -g azurite && ./.devcontainer/setup.sh",

  // start.sh should include the “nohup azurite … &” block we discussed
  "postStartCommand": "bash .devcontainer/start.sh",

  // ── VS Code customisation ───────────────────────────────────────────────
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "Azurite.azurite"              // Explorer & table viewer (optional)
      ]
    }
  },

  // ── Misc settings unchanged ─────────────────────────────────────────────
  "mounts": [
    "source=codespaces-linux-var-lib-docker,target=/var/lib/docker,type=volume"
  ],
  "overrideCommand": false,
  "remoteUser": "codespace",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined",
    "--init",
    "--privileged"
  ]
}
